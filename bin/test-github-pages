#!/bin/bash

# Clean up any existing containers and cached files
echo "Cleaning up..."
docker compose -f docker-compose.github-pages.yml down -v
rm -rf _site .jekyll-cache vendor Gemfile.lock

# Start the GitHub Pages environment
echo "Starting GitHub Pages test environment..."
docker compose -f docker-compose.github-pages.yml up --build --remove-orphans

# The site will be available at http://localhost:4000
